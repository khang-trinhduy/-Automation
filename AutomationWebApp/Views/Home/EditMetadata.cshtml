@model SharedLibrary.MetadataModel
@{
    ViewData["title"] = "Edit metadata";
}
<div class="container">
    <form asp-action="EditMetadata">
        <div class="form-group" hidden>
          <label asp-for="Id">Id</label>
          <input asp-for="Id" type="text" name="Id" class="form-control" placeholder="" aria-describedby="helpId">
          <small id="helpId" class="text-muted">Help text</small>
        </div>
        <div class="form-group row">
            <label asp-for="Table" class="col-sm-1-12 col-form-label">Table</label>
            <div class="col-sm-1-12">
                <input asp-for="Table" type="text" class="form-control" name="Table"  placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Field" class="col-sm-1-12 col-form-label">Field</label>
            <div class="col-sm-1-12">
                <input asp-for="Field" type="text" class="form-control" name="Field" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-sm-1-12 col-form-label">Type</label>
            <div class="col-sm-1-12">
                <input asp-for="Type" type="text" class="form-control" name="Type" placeholder="">
            </div>
        </div>
        
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>
@model IEnumerable<SharedLibrary.ActionModel>
@{
    ViewData["Title"] = "Action page";
}
<hr/>
<a asp-action="CreateAction">Create new action</a> Or
<a asp-action="ImportAction">Import action from excel/csv</a>
<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Value</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td scope="row">@item.Type</td>
                <td>@item.Value</td>
                <td><a asp-action="EditAction" asp-route-id="@item.Id">Edit</a> | 
                    <a asp-action="DeleteAction" asp-route-id="@item.Id">Delete</a> |
                    <a asp-action="SetActionMeta" asp-route-id="@item.Id">Set meta</a>
                </td>
            </tr>

        }
        
    </tbody>
</table>
@model SharedLibrary.TriggerModel;
@{
    ViewData["title"] = "Edit trigger";
}
<div class="container">
    <form asp-action="EditTrigger" >
        <div class="form-group" hidden>
          <label asp-for="Id">Id</label>
          <input asp-for="Id" type="text" name="Id" id="Id" class="form-control" placeholder="" aria-describedby="helpId">
          <small id="helpId" class="text-muted">Help text</small>
        </div>
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-1-12 col-form-label">Title</label>
            <div class="col-sm-1-12">
                <input asp-for="Title" type="text" class="form-control" name="Title" id="Title" placeholder="Title">
            </div>
        </div>
        <fieldset class="form-group row">
            <legend class="col-form-legend col-sm-1-12">Title</legend>
            <div class="col-sm-1-12">
                
            </div>
        </fieldset>
        <div class="form-group">
          <label asp-for="Description">Description</label>
          <input asp-for="Description" type="text" name="Description" id="Description" class="form-control" placeholder="Description" aria-describedby="helpId">
          <small id="helpId" class="text-muted">Help text</small>
        </div> 
        <div class="form-check">
          <label class="form-check-label">
            <input asp-for="IsNotActive" type="checkbox" class="form-check-input" name="IsNotActive" id="IsNotActive">
            IsNotActive
          </label>
        </div>
        <div class="form-group">
          <label asp-for="Position">Position</label>
          <input asp-for="Position" type="number" name="Position" id="Position" class="form-control" placeholder="Position" aria-describedby="helpId">
          <small id="helpId" class="text-muted">Help text</small>
        </div>
        <div class="form-group">
          <label asp-for="Table">Table</label>
          <input asp-for="Table" type="text" name="Table" id="Table" class="form-control" placeholder="Table" aria-describedby="helpId">
          <small id="helpId" class="text-muted">Help text</small>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>
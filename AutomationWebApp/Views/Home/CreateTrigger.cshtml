@model SharedLibrary.TriggerModel;
@{
    ViewData["title"] = "Create trigger";
}
<div class="container">
    <form asp-action="CreateTrigger">
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-1-12 col-form-label">Title</label>
            <div class="col-sm-1-12">
                <input asp-for="Title" type="text" class="form-control" name="Title" id="Title" placeholder="Title">
            </div>
        </div>
        <fieldset class="form-group row">
            <legend class="col-form-legend col-sm-1-12">Title</legend>
            <div class="col-sm-1-12">
                
            </div>
        </fieldset>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-1-12 col-form-label">Description</label>
            <div class="col-sm-1-12">
                <input asp-for="Description" type="text" class="form-control" name="Description" id="Description" placeholder="Description">
            </div>
        </div>
        <fieldset class="form-group row">
            <legend class="col-form-legend col-sm-1-12">Description</legend>
            <div class="col-sm-1-12">
                
            </div>
        </fieldset>
        <div class="form-group row">
            <label asp-for="IsNotActive" class="col-sm-1-12 col-form-label">IsNotActive</label>

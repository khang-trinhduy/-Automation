@model SharedLibrary.ContactModel
@{
    ViewData["Title"] = "Create contact";
}
<div class="container">
    <form asp-action="CreateContact">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-1-12 col-form-label">Name</label>
            <div class="col-sm-1-12">
                <input asp-for="Name" type="text" class="form-control" name="Name" id="Name" placeholder="Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="Age" class="col-sm-1-12 col-form-label">Age</label>
            <div class="col-sm-1-12">
                <input asp-for="Age" type="number" class="form-control" name="Age" id="Age" placeholder="Age">
            </div>
        </div>
        <div class="form-group row">
            <label for="PhoneNumber" class="col-sm-1-12 col-form-label">Phone number</label>
            <div class="col-sm-1-12">
                <input asp-for="PhoneNumber" type="text" class="form-control" name="PhoneNumber" id="PhoneNumber" placeholder="PhoneNumber">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>
@model SharedLibrary.MetadataModel
@{
    ViewData["title"] = "Create metadata";
}
<div class="container">
    <form asp-action="CreateMetadata">
        <div class="form-group row">
            <label asp-for="Table" class="col-sm-1-12 col-form-label">Table</label>
            <div class="col-sm-1-12">
                <input asp-for="Table" type="text" class="form-control" name="Table" id="Table" placeholder="">
            </div>
        </div>    
        <div class="form-group row">
            <label asp-for="Field" class="col-sm-1-12 col-form-label">Field</label>
            <div class="col-sm-1-12">
                <input asp-for="Field" type="text" class="form-control" name="Field">
            </div>
        </div>    
        <div class="form-group row">
            <label asp-for="Type" class="col-sm-1-12 col-form-label">Type</label>
            <div class="col-sm-1-12">
                <input asp-for="Type" type="text" class="form-control" name="Type">
            </div>
        </div>    
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>
@model SharedLibrary.ActionModel
@{
    ViewData["title"] = "Create action";
}
<div class="container">
    <form asp-action="CreateAction">
        <div class="form-group row">
            <label asp-for="Type" class="col-sm-1-12 col-form-label">Type</label>
            <div class="col-sm-1-12">
                <input asp-for="Type" type="text" class="form-control" name="Type" id="Type" placeholder="">
            </div>
        </div>    
        <div class="form-group row">
            <label asp-for="Value" class="col-sm-1-12 col-form-label">Value</label>
            <div class="col-sm-1-12">
                <input asp-for="Value" type="text" class="form-control" name="Value" id="Name">
            </div>
        </div>    
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>
@model SharedLibrary.ConditionModel;
@{
    ViewData["title"] = "Delete condition";
}

<div class="container">
    <form>
        <div class="form-group row">
            <label asp-for="Operator" class="col-sm-1-12 col-form-label">Operator</label>
            <div class="col-sm-1-12">
                <input asp-for="Operator" type="text" class="form-control" name="Operator" id="Operator" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Threshold" class="col-sm-1-12 col-form-label">Threshold</label>
            <div class="col-sm-1-12">
                <input asp-for="Threshold" type="text" class="form-control" name="Threshold" id="Threshold" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-sm-1-12 col-form-label">Type</label>
            <div class="col-sm-1-12">
                <input asp-for="Type" type="text" class="form-control" name="Type" id="Type" placeholder="">
            </div>
        </div>
    </form>
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div>
        <button value="delete" type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Condition">Back to list</a>
    </div>
}
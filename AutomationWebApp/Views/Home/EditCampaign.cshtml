@model SharedLibrary.CampaignModel;
@{
    ViewData["title"] = "Edit campaign";
}
<div class="container">
    <form asp-action="EditCampaign">
        <div class="form-group" hidden>
          <label asp-for="Id">Id</label>
          <input asp-for="Id" type="text" name="Id" id="Id" class="form-control" placeholder="" aria-describedby="helpId">
          <small id="helpId" class="text-muted">Help text</small>
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-1-12 col-form-label">Name</label>
            <div class="col-sm-1-12">
                <input asp-for="Name" type="text" class="form-control" name="Name" id="Name" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="IsRunning" class="col-sm-1-12 col-form-label">IsRunning</label>
            <div class="col-sm-1-12">
                <input asp-for="IsRunning" type="checkbox" class="form-control" name="IsRunning" id="IsRunning" placeholder="">
            </div>
        </div>
        
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>